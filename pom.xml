        </dependency>
        <dependency>
            <groupId>com.kadme</groupId>
            <artifactId>ont-irisv2</artifactId>
            <version>${project.version}</version>
        </dependency>
        <dependency>
            <groupId>com.kadme</groupId>
            <artifactId>ont-baspro</artifactId>
            <version>${project.version}</version>
        </dependency>
        <dependency>
            <groupId>com.kadme</groupId>
            <artifactId>ont-irisdict</artifactId>
            <version>${project.version}</version>
        </dependency>
        <dependency>
            <groupId>com.kadme</groupId>
            <artifactId>ont-geolog</artifactId>
            <version>${project.version}</version>
        </dependency>
        <dependency>
            <groupId>com.kadme</groupId>
            <artifactId>ont-kingdom</artifactId>
            <version>${project.version}</version>
        </dependency>
        <dependency>
            <groupId>com.kadme</groupId>
