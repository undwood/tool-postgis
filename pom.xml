        </repository>
        <repository>
            <id>SourceForge</id>
            <url>http://csvjdbc.sourceforge.net/maven2</url>
        </repository>
    </repositories>
    <properties>
        <encoding>UTF-8</encoding>
        <java.version>1.7</java.version>

    </properties>
</project>
